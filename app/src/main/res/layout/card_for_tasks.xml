<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_tasks"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="5dp"
    card_view:cardCornerRadius="8dp"
    android:layout_margin="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/warning_hand"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                card_view:srcCompat="@drawable/baseline_front_hand_24"
                android:tint="@color/green"/>
            <TextView
                android:id="@+id/task_name_in_card_tasks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:gravity="start"
                android:textSize="20sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="#A3FBA6"
                android:freezesText="false"
                android:nestedScrollingEnabled="false"
                android:padding="3dp"
                android:text="Относится к группе: "
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#190F0F"
                android:textIsSelectable="true"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/group_name_in_card_tasks"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:padding="3dp"
                android:text="Тут будет название группы"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="17sp" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:layout_weight="3"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="#A3FBA6"
                android:padding="3dp"
                android:text="Дата конца:"
                android:textAllCaps="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#190F0F"
                android:textIsSelectable="true"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/task_date_in_card"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_margin="2dp"
                android:padding="3dp"
                android:text="Тут будет дата"
                android:textSize="17sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2" />


        </LinearLayout>

        <TextView
            android:id="@+id/task_description_in_card_tasks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:padding="7dp"
            android:textSize="16sp"
            android:background="@drawable/description"
            android:visibility="gone"/>
    </LinearLayout>

    <TextView
        android:id="@+id/deprecated"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/dedlain"
        android:gravity="center"
        android:padding="5dp"
        android:rotation="9"
        android:text="Просрочено"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="#7C1212"
        android:visibility="gone"/>
</androidx.cardview.widget.CardView>